<section id="badges">
  <div class="page-header">
    <h1>Badges</h1>
  </div>
  <h3>With Controller</h3>
  <p>A minimal controller could look like:</p>
  <pre class="prettyprint linenums">App.BadgesController = Ember.ObjectController.extend
  label: '1'
  type: 'success'</pre>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Example</th>
        <th>Static</th>
        <th>Dynamic</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          Default
        </td>
        <td>
          {{view Bootstrap.Badge content="1"}}
        </td>
        <td>
          <code>&#123;{view Bootstrap.Badge content="1"}}</code>
        </td>
        <td>
          <code>&#123;{view Bootstrap.Badge contentBinding="controller.label"}}</code>
        </td>
      </tr>
      <tr>
        <td>
          {{capitalize controller.type}}
        </td>
        <td>
          {{view Bootstrap.Badge contentBinding="controller.label" typeBinding="controller.type"}}
        </td>
        <td>
          <code>&#123;{view Bootstrap.Badge content="{{controller.label}}" type="{{controller.type}}"}}</code>
        </td>
        <td>
          <code>&#123;{view Bootstrap.Badge contentBinding="controller.label" typeBinding="controller.type"}}</code>
        </td>
      </tr>
    </tbody>
  </table>

  <form>
    {{#each type in types}}
    <label class="radio inline">
      <input {{action 'select' type on="change"}} type="radio" name="type" value="{{type}}"> {{view Bootstrap.Label contentBinding="type" typeBinding="type"}}
    </label>
    {{/each}}
  </form>
</section>